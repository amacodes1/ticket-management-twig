<div id="ticket-modal" class="fixed inset-0 hidden items-center justify-center z-50 p-4">
  <div class="w-full max-w-md bg-white dark:bg-zinc-900 rounded-xl shadow-2xl p-4 md:p-6 max-h-[90vh] overflow-y-auto">
    <div class="relative flex w-full flex-col">
      <h1 id="ticket-modal-title" class="text-zinc-900 dark:text-white tracking-light text-lg md:text-xl font-bold leading-tight text-left pb-4">Create New Ticket</h1>
    </div>

    <form id="ticket-form" class="space-y-4">
      <div>
        <label class="block text-base font-medium text-zinc-800 dark:text-zinc-200">Title</label>
        <input id="ticket-title" class="w-full px-4 py-3 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 text-zinc-900 dark:text-white" />
        <p id="ticket-title-error" class="text-red-500 text-sm mt-1 h-4"></p>
      </div>

      <div>
        <label class="block text-base font-medium text-zinc-800 dark:text-zinc-200">Description</label>
        <textarea id="ticket-desc" class="w-full px-4 py-3 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 text-zinc-900 dark:text-white min-h-36"></textarea>
        <p id="ticket-desc-error" class="text-red-500 text-sm mt-1 h-4"></p>
      </div>

      <div>
        <label class="block text-base font-medium text-zinc-800 dark:text-zinc-200">Status</label>
        <select id="ticket-status" class="w-full px-4 py-3 rounded-lg bg-white dark:bg-zinc-800 border border-zinc-300 dark:border-zinc-700 text-zinc-900 dark:text-white">
          <option value="open">Open</option>
          <option value="in_progress">In Progress</option>
          <option value="closed">Closed</option>
        </select>
        <p id="ticket-status-error" class="text-red-500 text-sm mt-1 h-4"></p>
      </div>

      <div class="flex justify-end pt-4 gap-3">
        <button type="button" id="ticket-cancel" class="py-2 px-4 rounded-xl bg-gray-200 dark:bg-gray-700 text-[#111827] dark:text-white">Cancel</button>
        <button type="submit" id="ticket-submit" class="py-2 px-4 rounded-xl bg-[#9B8AFB] text-white">Create Ticket</button>
      </div>
    </form>
  </div>
</div>
